{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PyMusicBrowser",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "src"
            ],
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "Run PySide6 designer",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pyside6-designer"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}